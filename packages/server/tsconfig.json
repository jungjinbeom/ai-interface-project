{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "module": "ESNext",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "target": "ES2020",
        "paths": {
            "@/*": ["src/*"],
            "@hooks/*": ["src/hooks/*"],
            "@utils/*": ["src/utils/*"],
            "@types/*": ["src/types/*"],
            "shared": ["shared/src"],
            "shared/*": ["../shared/src/*"]
        }
    },
    "include": ["src"]
}
